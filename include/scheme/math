#ifndef   SCHEME_MATH
#define   SCHEME_MATH

#include <cmath>

namespace scheme {
  template <typename Numeric1, typename Numeric2>
  constexpr auto fmod(Numeric1 a, Numeric2 b) noexcept
      -> decltype(std::fmod(a, b));
}

#include <scheme/pieces/math.hh>
#include <scheme/trigonometry>

#endif // SCHEME_MATH
